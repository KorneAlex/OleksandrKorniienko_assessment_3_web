{{#each summaryForTheStation}}
<section class="box is-flex is-justify-content-center is-justify-content-space-around" style="margin-bottom: 2rem;">

        <div class="p-2 is-align-content-center" style="width: 18%;">
            <div class="is-flex is-flex-direction-row">
                <div class="card-header-title">{{this.name}}<br>{{this.city}}<br>Co. {{this.county}}</div>
                <div class="card-header-icon">{{>icons/location}}</div>
            </div>
        </div>

        <div class="p-2 is-align-content-center" style="width: 18%;">
            <div class="is-flex is-flex-direction-row">
                <div class="card-header-title">Now: <br>{{currentWeatherConditions.description}}<br></div>
                <div class="card-header-icon">{{>icons/current-weather}}</div>
            </div>
        </div>

        <div class="p-2 is-align-content-center" style="width: 18%;">
            <div class="is-flex is-flex-direction-row">
                <div class="card-header-title">Temperature: <br>{{this.currentTemp}} Â°C</div>
                <div class="card-header-icon">{{>icons/temperature}}</div>
            </div>
        </div>

        <div class="p-2 is-align-content-center" style="width: 18%;">
            <div class="is-flex is-flex-direction-row">
                <div class="card-header-title">Wind<br>{{this.currentWindSpeed}} m/s</div>
                <div class="card-header-icon">{{>icons/wind}}</div>
            </div>
        </div>

        <div class="p-2 is-align-content-center" style="width: 18%;">
            <div class="is-flex is-flex-direction-row">
                <div class="card-header-title">Pressure<br>{{this.currentPressure}} hPa</div>
                <div class="card-header-icon">{{>icons/pressure}}</div>
            </div>
        </div>
        <div class="p-2 is-align-content-center">
            <a href="/stations/{{id}}" class="button"><div class="station-button" style="padding-right: 12px">{{>icons/logo}}</div> <p>Open station</p></a>
        </div>

</section>
    {{/each}}