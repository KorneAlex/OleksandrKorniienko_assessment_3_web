<form class="box" action="/dashboard/addStation" method="POST" name="form" onsubmit="return validateForm()">
  <label>Add new station:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Name" name="name" autocomplete="name" maxlength="20">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="City" name="city" maxlength="58">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="County" name="county" maxlength="25">
      </div>
      <div class="field">
        <input class="input" type="number" placeholder="Latitude" name="latitude" min="-90" max="90">
      </div>
      <div class="field">
        <input class="input" type="number" placeholder="Longtitude" name="longitude" min="-180" max="180">
      </div>
    </div>
  </div>
  <button class="button is-primary">Submit station</button>
</form>

<script type="text/javascript">
  function validateForm() {
    const form = "form";
    var a = document.forms[form]["name"].value;
    var b = document.forms[form]["city"].value;
    var c = document.forms[form]["county"].value;
    var d = document.forms[form]["latitude"].value;
    var e = document.forms[form]["longitude"].value;
    if  ((a == null || a == "") || 
        (b == null || b == "") ||
        (c == null || c == "") ||
        (d == null || d == "") ||
        (e == null || e == "")) {
      alert("Please Fill In All Fields");
      return false;
    }
  }
</script>