<form class="box" action="/stations/{{currentStation.id}}/addRecord" method="POST" name="form" onsubmit="return validateForm()">
  <label>Enter new record:</label>
  <div class="field is-horizontal">
    <div class="field-body" >
      {{!-- <div class="field">
        <input class="input" type="number" placeholder="Code" name="code">
      </div> --}}
        <div class="select field" placeholder="Code" >
        <select class="input" type="number" placeholder="Code" name="code">
          {{#each codesList}}
          <p>{{code}}</p>
          {{/each}}
          <option></option>
          {{#each codesList}}
          <option>{{code}}</option>
          {{/each}}
        </select>
      </div>
      <div class="field">
        <input class="input" type="number" placeholder="Temperature" name="temperature" >
      </div>
      <div class="field">
        <input class="input" type="number" placeholder="Wind speed" name="wind_speed">
      </div>
      <div class="field">
        <input class="input" type="number" placeholder="Wind direction" name="wind_direction">
      </div>
      <div class="field">
        <input class="input" type="number" placeholder="Pressure" name="pressure">
      </div>
    </div>
  </div>
  <button class="button is-primary">Submit record</button>
</form>
<div class="box">
  <a href="/stations/{{currentStation.id}}/requestData"><button class="button is-primary">Request data</button></a>
</div>


{{!-- https://stackoverflow.com/questions/3937513/javascript-validation-for-empty-input-field --}}
