<script type="text/javascript">
  function validateForm() {
    const form = "form";
    var a = document.forms[form]["temperature"].value;
    var b = document.forms[form]["wind_speed"].value;
    var c = document.forms[form]["wind_direction"].value;
    var d = document.forms[form]["pressure"].value;
    var e = document.forms[form]["code"].value;
    if  ((a == null || a == "") || 
        (b == null || b == "") ||
        (c == null || c == "") ||
        (d == null || d == "") ||
        (e == null || e == "")) {
      alert("Please Fill In All Fields");
      return false;
    }
  }
</script>