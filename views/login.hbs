{{> page/welcome-menu active="login"}}

<section class="section is-flex is-justify-content-center">
  <div class="box " style="width: 50%;">
  <h1 class="title">Log in</h1>
  <form action="/authenticate" method="POST">
    <div class="field">
      <label class="label">Email</label> <input class="input" type="email" placeholder="Enter email" name="email" value="{{email}}">
    </div>
    <div class="field">
      <label class="label">Password</label> <input class="input" type="password" placeholder="Enter Password" name="password">
    </div>
    <div class="field is-grouped is-justify-content-space-between is-align-items-baseline">
      <button class="button is-link">Submit</button>
   {{#if noUser}}
   {{>warning/noUser}}
   {{/if}}
   {{#if wrongPass}}
   {{>warning/wrongPass}}
   {{/if}}
   {{#if noLoginData}}
   {{>warning/noLoginData}}
   {{/if}}
   {{#if noPass}}
   {{>warning/noPass}}
   {{/if}}
   {{#if unknownError}}
   {{>warning/unknownError}}
   {{/if}}
    </div>
  </form>
  </div>
</section>
